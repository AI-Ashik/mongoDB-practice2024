<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Cards</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1a202c;
        color: #e2e8f0;
      }
    </style>
  </head>
  <body>
    <header class="bg-gray-800 py-2">
      <nav class="container mx-auto flex justify-center">
        <a href="/" class="text-white font-medium hover:underline">
          Go to Home Page
        </a>
      </nav>
    </header>
    <div class="flex flex-col justify-center items-center h-screen">
      <h2 class="text-3xl font-bold mb-6 text-center">All Users</h2>
      <% if (users.length > 0) { %>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full max-w-6xl px-4"
      >
        <% users.forEach(function(user) { %>
        <div
          class="bg-gray-800 rounded-lg shadow-lg overflow-hidden transform transition-transform duration-300"
        >
          <img
            class="w-full h-56 object-cover p-2"
            src="<%= user.image %>"
            alt="<%= user.name %>"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold mb-2 text-gray-100 hover:text-white">
              <%= user.name %>
            </h3>
            <p class="text-gray-400 mb-4 hover:text-gray-200">
              <%= user.email %>
            </p>
            <div class="flex justify-between">
              <button
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200"
              >
                <a href="">Edit User</a>
              </button>
              <button
                class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md transition duration-200"
              >
                <a href="/delete/<%= user._id %>">Delete User</a>
              </button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p class="text-gray-400">No users yet</p>
      <% } %>
    </div>
  </body>
</html>
